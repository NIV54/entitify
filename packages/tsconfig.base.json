{
  "extends": "./../tsconfig.build.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "importHelpers": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "types": ["node"],
    "esModuleInterop": true,
    "paths": {
      "@entitify/common": ["common"],
      "@entitify/core": ["core"],
      "@entitify/express": ["express"],
      "@entitify/nest-rest": ["nest-rest"]
    }
  },
  "exclude": ["../node_modules", "./**/*.spec.ts"]
}
